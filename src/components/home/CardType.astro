---
import Button from "../utils/Button.astro";

interface Props {
  title: string;
  link: string;
  background: string;
  disabled?: boolean;
}

const {
  title,
  link = "",
  background = "#5352ed",
  disabled = false,
} = Astro.props;
---

<a
  href={!disabled && link}
  class:list={[
    "card violet full",
    {
      "opacity-50": disabled,
      "opacity-100": !disabled,
    },
  ]}
  transition:name="hero"
>
  <div class={`icon text-left  ${!disabled ? "text-white" : "text-gray-400"}`}>
    <slot name="icon" />
  </div>
  <div class="text text-left">
    <h2
      class:list={[
        "text-xl font-normal",
        {
          "text-white": !disabled,
          "text-gray-400": disabled,
        },
      ]}
    >
      {title}
    </h2>
  </div>
  <!-- <div class="text-right pt-2">
    {link && <Button disabled>{link ? "Probar ✨" : "❌ Pronto..."}</Button>}
  </div> -->
</a>

<style define:vars={{ background, disabled }}>
  .card {
    width: 48%;
    margin: 0 auto;
    min-height: 100px;
    padding: 1em;
    border-radius: 12px;
    margin: 0.5em 0.5em;
    background-color: var(--background);
  }

  .text {
    width: 100%;
    display: block;
  }
  .icon {
    width: 100%;
  }

  @media screen and (max-width: 800px) {
    .card {
      margin: 0.2em auto;
    }
  }
</style>
